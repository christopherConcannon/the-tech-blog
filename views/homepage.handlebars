{{#each posts as |post|}}
  <div class="card">
    <div class="card-header flex-row justify-space-between">
      <h3>{{post.title}}</h3>
      <span class="post-meta">Posted by {{post.user.username}} on {{format_date post.created_at}}</span>
    </div>
    <div class="card-body">{{post.content}}</div>
  </div>
{{/each}}
   