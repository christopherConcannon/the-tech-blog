<div class="card">
  <div class="card-header text-light flex-row justify-space-between">
    <a href="/post/{{id}}"><h3>{{title}}</h3></a>
    <span class="post-meta">Posted by {{user.username}} on {{format_date created_at}}</span>
  </div>
  <div class="card-body">{{content}}</div>
</div>


