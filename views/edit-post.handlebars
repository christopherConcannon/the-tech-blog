<form id="edit-post-form" class="card">
  <div class="card-header"><h3>Edit Post</h3></div>
  <div class="card-body">
    <div>
      <label for="post-title">Title</label>
      <input type="text" name="post-title" id="post-title" class="w-100 p-3 post-title" value="{{post.title}}">
    </div>
    <div>
      <label for="post-content">Content</label>
      <textarea name="post-content" id="post-content" rows="10" class="w-100 p-3 post-content">{{post.content}}</textarea>
    </div>
    <button type="submit" class="btn">Update Post</button>
    <button type="button" id="delete-post-btn" class="btn">Delete</button>
  </div>
</form>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>