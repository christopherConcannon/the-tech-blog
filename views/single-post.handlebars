{{> post-info post }}

{{#if post.comments.length}}
  {{> comments post.comments}}
{{/if}}

{{!-- only display form if user logged in --}}
{{#if loggedIn}}
  <form id="comment-form" class="card">
    <div class="card-header"></div>
    <div class="card-body">
      <label for="comment-body">Comment</label>
      <textarea name="comment-body" class="w-100 p-3" rows="10"></textarea>
      <button type="submit" class="btn">Submit!</button>
    </div>
  </form>
{{/if}}

{{!-- only load form event listeners if user logged in and form is displayed --}}
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}